<div class="container custom-bg">
    <h2 class="text-center">Games List</h2>
    <section class="row">
        {{#each games}}
        <div class="col-md-6 col-lg-4 mb-3">
            <div class="card h-100 d-flex flex-column">
                <img src="{{this.image}}" class="card-img-top" alt="Game Image">
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">{{title}}</h4>
                    <p class="card-text">{{description}}</p>
                    <a href="/games/{{_id}}" class="btn btn-primary mt-auto">See More</a>
                </div>
            </div>
        </div>
        {{/each}}
    </section>
    <div class="row mt-3">
        <div class="col-md-12 text-center">
            <a href="/games/create" class="btn btn-success mx-2">New Game</a>
            <a href="/" class="btn btn-primary mx-2">Home Page</a>
        </div>
    </div>
</div>