<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center">Game Page</h2>
            <section class="mt-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Title: {{title}}</h4>
                        <p>Category: {{category}}</p>
                        <p>Description: {{description}}</p>
                        {{#each reviews}}
                        <p><strong>{{this.author.usertitle}} Review:</strong> {{this.content}}</p>
                        {{/each}}
                        <p>Mode: {{mode}}</p>
                        <img src={{image}} class="img-fluid" alt="Game Image">
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="/games/{{_id}}/edit" class="btn btn-primary">Edit the Game</a>
                </div>
                <hr class="mt-3">
                <form action="/review/create/{{_id}}" method="post" class="mt-3">
                    <label class="form-label" for="content">Leave your Review:</label>
                    <textarea class="form-control" name="content" id="content" rows="4"></textarea>
                    <button type="submit" class="btn btn-success mt-2">Done</button>
                </form>
                <form action="/addFavorites/{{_id}}" method="post" class="mt-3">
                    <button type="submit" class="btn btn-info">Add to Favorites</button>
                </form>
            </section>
            <div class="text-center mt-3">
                <a href="/games" class="btn btn-secondary">Back to Games List</a>
                <a href="/" class="btn btn-primary">Home Page</a>
            </div>
        </div>
    </div>
</div>
