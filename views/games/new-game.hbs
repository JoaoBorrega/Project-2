<div>
    <h2>New Game</h2>
    <div id="celeb-create">
        <form action="/games/create" method="post">
        <label> Title:
            <input type="text" name="title" />
        </label>
        
        <div>
            <label for="category">Choose the category:</label>
            <select name="category" id="mode" multiple>
            <option value="1-player">1 Player</option>
            <option value="multiplayer">Multiplayer</option>
            <option value="cooperative">Cooperative</option>
            <option value="remote-play">Remote Play</option>
            </select>
        </div>

        <label> Description:
            <textarea name="description" cols="30" rows="4"> </textarea>
        </label>
        
        <label> Review:
            <textarea name="review" cols="30" rows="4"> </textarea>
        </label>
        
        <div>
            <label for="mode">Choose the mode:</label>
            <select name="mode" id="mode" multiple>
            <option value="RPG">RPG</option>
            <option value="Sports">Sports</option>
            <option value="Strategy">Strategy</option>
            <option value="Action">Action</option>
            </select>
        </div>

        <button type="submit"> Save entry </button>
        </form>
    </div>
    <a href="/games">Games list</a>
    <a href="/">Home Page</a>
</div>