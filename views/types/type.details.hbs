<div>
    <h2>{{chosenType.title}} details</h2>
    <section>
        <div>
            <h4>Title: {{chosenType.title}}</h4>
            <p>Category: {{chosenType.category}}</p>
            <p>Description: {{chosenType.description}}</p>
            <p>Review: {{chosenType.review}}</p>
            <p>Mode: {{chosenType.mode}}</p>
        </div>
        <div>
            {{#each chosenType.games}}
                <div>
                    <h4>Game title: {{this.title}}</h4>
                    <p>Category: {{this.category}}</p>
                    <p>Description: {{this.description}}</p>
                    <p>Review: {{this.review}}</p>
                    <p>Mode: {{this.mode}}</p>
                </div>
            {{/each}}
        </div>
        <a href="/types/{{chosenType._id}}/edit">Edit the Type</a>
        <br>
        <form action="/types/{{chosenType._id}}/delete" method="post">
            <button type="submit">Delete</button>
        </form>
    </section>
    <a href="/types">Back to types list</a>
    <a href="/">Home Page</a>
</div>